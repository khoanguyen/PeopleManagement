@{
    ViewBag.Title = "People Management";
}


@section body {
    <div class="row">
        <div class="col-md-1 col-md-offset-10">
            <button class="btn btn-primary" data-bind="click: addPerson">New Person</button>
        </div>
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Birthday</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: people">
                    <tr>
                        <td><span data-bind="text: FirstName"></span></td>
                        <td><span data-bind="text: LastName"></span></td>
                        <td><span data-bind="text: Birthday"></span></td>
                        <td><span data-bind="text: Email"></span></td>
                        <td><span data-bind="text: Phone"></span></td>
                        <td>
                            <a href="#" class="tag-edit" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
                            <a href="#" class="tag-remove" title="Remove"><span class="glyphicon glyphicon-remove"></span></a>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="6">
                            <ul class="pager">
                                <li data-bind="attr: { 'class': previousButtonClass }, click: previousPage"><a href="#">&larr; Previous</a></li>
                                <li><span data-bind="text: pageIndex() + ' of ' + pageCount()"></span></li>
                                <li data-bind="attr: { 'class': nextButtonClass }, click: nextPage"><a href="#">Next &rarr;</a></li>
                            </ul>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <div id="edit-person-dialog" title="Person Info" data-bind="with: editedPerson">
        <form id="edit-person-form">
            <div class="form-group">
                <label>FirstName</label> 
                <input class="form-control" type="text" data-bind="value: FirstName" placeholder="FirstName"
                    maxlength="50" id="edit-person-firstname"/>
            </div>

            <div class="form-group">
                <label>LastName</label> 
                <input class="form-control" type="text" data-bind="value: LastName" placeholder="LastName"
                        maxlength="50" id="edit-person-lastname"/>
            </div>

            <div class="form-group">
                <label>Birthday</label>
                <input class="form-control" type="date" id="edit-person-birthday-picker" data-bind="value: Birthday"/>
            </div>

            <div class="form-group">
                <label>Email</label> 
                <input class="form-control" type="email" data-bind="value: Email" placeholder="Email"
                    maxlength="254" id="edit-person-email"/>
            </div>

            <div class="form-group">
                <label>Phone</label>
                <input class="form-control" type="tel" data-bind="value: Phone" placeholder="Phone" id="edit-person-phone"
                    maxlength="20" title="Phone format: phone number contains 7-20 digits only" pattern="^\d{7,20}$"/>
            </div>
        </form>
    </div>
    
}

@section scripts{
    @Scripts.Render("~/bundles/main")
}
